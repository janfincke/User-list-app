body
    #header
        h1
            | User List
            small.h1small compulsory exercise 2
    #container.col-md-8   
        #form
            form
                input#username(placeholder='Full name' type="name" required)
                input#email(placeholder='Email' type='email' required) 
                input#password(placeholder='Password' type='text' required)
                &nbsp
                button#add.btn.btn-success(type='submit')
                    span.glyphicon.glyphicon-plus-sign
                    &nbsp
                    | Add new user
                &nbsp
                button#remove.btn.btn-danger(type='button')
                    span.glyphicon.glyphicon-minus-sign
                    &nbsp
                    | Remove first row
        #searchtable
            input#search(placeholder='Search by name...')
    #userslist.col-md-8
        table#data.table.table-striped.col-md-8.col-md-offset-3
            tr
                th Full name
                th Email address/login name
                th Password
            tbody#users
